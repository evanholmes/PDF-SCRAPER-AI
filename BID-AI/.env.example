# BID-AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bidai
SQL_ECHO=False  # Set to True to see SQL queries in logs

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS_PATH=/path/to/credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=/path/to/token.json

# API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Scraper Configuration
SCRAPER_USER_AGENT=BID-AI/1.0 (Contact: your@email.com)
SCRAPER_RATE_LIMIT_SECONDS=2
SCRAPER_TIMEOUT_SECONDS=30

# BC Bid Credentials
BCBID_USERNAME=your_username
BCBID_PASSWORD=your_password

# MERX Credentials
MERX_USERNAME=your_username
MERX_PASSWORD=your_password

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL_TO=ceo@allprosigns.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE_PATH=logs/bidai.log

# System
TIMEZONE=America/Vancouver
